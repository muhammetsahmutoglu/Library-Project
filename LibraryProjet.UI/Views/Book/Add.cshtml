@model LibraryProject.DAL.ORM.Entity.Book
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/AppUser/UserList">Forms</a></li>
        <li class="active">Add User</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add User</h3>
                </div>
                <form asp-controller="Book" asp-action="Add" method="post" role="form" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label asp-for="Name">Book Name</label>
                            <input type="text" asp-for="Name" value="" class="form-control" placeholder="Book Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <input type="text" asp-for="Description" class="form-control" placeholder="Description">
                        </div>
                        <div class="form-group">
                            <label asp-for="AuthorFullName">Author Name</label>
                            <input type="text" asp-for="AuthorFullName" class="form-control" placeholder="Author Name">
                        </div>                        
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>



