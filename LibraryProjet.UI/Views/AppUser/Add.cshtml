@model LibraryProject.DAL.ORM.Entity.AppUser
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/AppUser/UserList">Forms</a></li>
        <li class="active">Add User</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add User</h3>
                </div>
                <form asp-controller="AppUser" asp-action="Add" method="post" role="form" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label asp-for="FirstName">First Name</label>
                            <input type="text" asp-for="FirstName" value="" class="form-control" placeholder="First Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName">Last Name</label>
                            <input type="text" asp-for="LastName" class="form-control" placeholder="Last Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="UserName">User Name</label>
                            <input type="text" asp-for="UserName" class="form-control" placeholder="User Name">
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input type="email" asp-for="Email" id="exampleInputEmail1" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Password</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                        </div>
                        <div class="form-group">
                                <label asp-for="Role">Role</label>
                                <select asp-for="Role" class="form-control">
                                    @foreach (var item in Enum.GetNames(typeof(LibraryProject.DAL.ORM.Enum.Role)))
                                    {
                                        <option value="@item">@item</option>
                                    }
                                </select>
                            </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

